{
  "version": 2,
  "name": "ballroom-community-staging",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "env": {
    "NODE_ENV": "staging",
    "VITE_APP_ENV": "staging",
    "VITE_APP_VERSION": "@vercel-env-VERCEL_GIT_COMMIT_SHA",
    "VITE_SUPABASE_URL": "@staging-supabase-url",
    "VITE_SUPABASE_ANON_KEY": "@staging-supabase-anon-key",
    "VITE_STRIPE_PUBLISHABLE_KEY": "@staging-stripe-publishable-key",
    "VITE_GOOGLE_ANALYTICS_ID": "@staging-google-analytics-id"
  },
  "build": {
    "env": {
      "NODE_ENV": "staging"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.stripe.com https://*.supabase.co wss://*.supabase.co;"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "src/api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "autoAlias": false
  }
}