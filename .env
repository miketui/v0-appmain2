# Haus of Basquiat Portal - Environment Variables Template
# SECURITY WARNING: This is a template file. DO NOT commit actual secrets to version control.
# Copy this file to .env.local for development or set these variables in your deployment platform

# =============================================================================
# REQUIRED - DATABASE & AUTHENTICATION
# =============================================================================

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URLs (Required)
DATABASE_URL=your_database_connection_string_here
DIRECT_URL=your_direct_database_connection_string_here

# =============================================================================
# REQUIRED - APPLICATION CONFIGURATION
# =============================================================================

# App URLs (update these with your actual domain in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback

# Security (Required)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# =============================================================================
# BACKEND CONFIGURATION (If using Express backend)
# =============================================================================

CLIENT_URL=http://localhost:3000
PORT=4000
NODE_ENV=development

# Legacy environment variable names (for backend compatibility)
VITE_SUPABASE_URL=https://kxyeeversoqzvhtesmje.supabase.co

# =============================================================================
# OPTIONAL - INTEGRATIONS
# =============================================================================

# Add values for optional integrations (Redis/Upstash, AI APIs, CopyLeaks, SendGrid, Stripe, Analytics, etc.) when you need them.

# =============================================================================
# OPTIONAL - PAYMENTS & SUBSCRIPTIONS
# =============================================================================

SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key_here
SUPABASE_SECRET_KEY=your_supabase_secret_key_here

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

SKIP_ENV_VALIDATION=false
ANALYZE=false
DISABLE_PWA=false
